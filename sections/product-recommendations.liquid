{%- liquid
  assign product_recommendations_id = product.id
  render 'product-list', title: section.settings.title, collection: section.settings.collection, footer_button_text: section.settings.footer_button_text, footer_button_link: section.settings.footer_button_link, product_recommendations_id: product_recommendations_id
-%}

{% schema %}
{
  "name": "Product recommendations",
  "class": "section-products-list",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "You may also like"
    },
    {
      "type": "checkbox",
      "id": "slider_is_enabled",
      "label": "Enable slider",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_button_text",
      "label": "Footer button text",
      "default": "Shop all"
    },
    {
      "type": "url",
      "id": "footer_button_link",
      "label": "Footer button link"
    }
  ],
  "presets": [
    {
      "category": "Product list",
      "name":"Product Recommendations"
    }
  ]
}
{% endschema %}
